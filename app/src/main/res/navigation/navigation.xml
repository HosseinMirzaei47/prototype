<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.prototype.features.home.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_second"
        android:name="com.example.prototype.features.second.ui.SecondFragment"
        android:label="@string/title_second"
        tools:layout="@layout/fragment_second" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.prototype.features.home.ui.LoginFragment"
        android:label="@string/loginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_navigation_login_to_navigation_home"
            app:destination="@id/navigation_home" />

    </fragment>

    <fragment
        android:id="@+id/navigation_users"
        android:name="com.example.prototype.features.users.ui.UsersFragment"
        android:label="@string/title_users"
        tools:layout="@layout/fragment_users" />

</navigation>